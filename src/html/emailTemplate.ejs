              <!--<![endif]-->
            </td>
          </tr>
          <!-- Content -->
          <tr>
            <td class="content">
              <h1><%- header %></h1>
              <p>Dear <%- name %>,</p>
              <p><%- bodyMessage %></p>
              <p style="text-align: center;">
                <a href="<%= linkUrl %>" class="button">Visit Our Website</a>
              </p>
            </td>
          </tr>
          <!-- Footer -->
